<odoo>
    <record id="view_label_tree" model="ir.ui.view">
        <field name="name">shiny_label.label.tree</field>
        <field name="model">shiny_label.label</field>
        <field name="arch" type="xml">
            <tree string="Label" editable="top">
                <field name="name"/>
                <field name="sort_order" widget="handle"/>
            </tree>
        </field>
    </record>

    <record id="view_label_form" model="ir.ui.view">
        <field name="name">shiny_label.label.form</field>
        <field name="model">shiny_label.label</field>
        <field name="arch" type="xml">
            <form string="Label">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sort_order"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>