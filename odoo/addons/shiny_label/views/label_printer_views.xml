<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_printer" model="ir.ui.view">
        <field name="name">shiny_label.printer.form</field>
        <field name="model">shiny_label.printer</field>
        <field name="arch" type="xml">
            <form string="Print Label">
                <sheet>
                    <group>

                        <field name="quantity"/>
                        <field name="custom_text"/>
                        <field name="label_id" widget='custom_radio'/>

                        <!-- Add as many fields as you need here -->
                    </group>
                    <!-- You can add more groups, tabs, etc. -->
                </sheet>
                <footer>
                    <button string="Print" type="object" name="print_button"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
